<!-- 声明 web.xml 使用的 XML 声明以及编码 -->
<?xml version="1.0" encoding="UTF-8"?>
<!-- web-app 根元素描述整个 Web 应用的部署信息 -->
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <!-- display-name 为应用指定一个名称，方便服务器管理界面展示 -->
  <display-name>banma01</display-name>

  <!-- welcome-file-list 定义访问根路径时首先查找的页面 -->
  <welcome-file-list>
    <!-- index.jsp 位于 Web 根目录，当用户访问 / 时会被自动打开 -->
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- 配置一个过滤器，用于统一设置请求与响应的字符集 -->
  <filter>
    <!-- filter-name 用于在映射中引用该过滤器 -->
    <filter-name>EncodingFilter</filter-name>
    <!-- 指定过滤器实现类的全限定名 -->
    <filter-class>com.banma.forum.filter.EncodingFilter</filter-class>
  </filter>
  <!-- 将过滤器应用到所有请求路径 -->
  <filter-mapping>
    <!-- 引用上面声明的过滤器 -->
    <filter-name>EncodingFilter</filter-name>
    <!-- url-pattern 为 /* 表示过滤器作用于整个站点 -->
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- 注册首页控制器 HomeServlet -->
  <servlet>
    <!-- servlet-name 是在映射中引用的逻辑名称 -->
    <servlet-name>HomeServlet</servlet-name>
    <!-- servlet-class 指向实现 HttpServlet 的类 -->
    <servlet-class>com.banma.forum.controller.HomeServlet</servlet-class>
  </servlet>
  <!-- 将 HomeServlet 映射到 /home 路径 -->
  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <!-- 注册处理登录、注册、退出的 AuthServlet -->
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>com.banma.forum.controller.AuthServlet</servlet-class>
  </servlet>
  <!-- AuthServlet 处理 /auth 开头的所有请求 -->
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth/*</url-pattern>
  </servlet-mapping>

  <!-- 注册帖子相关操作的 PostServlet -->
  <servlet>
    <servlet-name>PostServlet</servlet-name>
    <servlet-class>com.banma.forum.controller.PostServlet</servlet-class>
  </servlet>
  <!-- PostServlet 处理 /post 开头的所有请求 -->
  <servlet-mapping>
    <servlet-name>PostServlet</servlet-name>
    <url-pattern>/post/*</url-pattern>
  </servlet-mapping>

  <!-- 注册回复相关操作的 CommentServlet -->
  <servlet>
    <servlet-name>CommentServlet</servlet-name>
    <servlet-class>com.banma.forum.controller.CommentServlet</servlet-class>
  </servlet>
  <!-- CommentServlet 处理 /comment 开头的所有请求 -->
  <servlet-mapping>
    <servlet-name>CommentServlet</servlet-name>
    <url-pattern>/comment/*</url-pattern>
  </servlet-mapping>

</web-app>
